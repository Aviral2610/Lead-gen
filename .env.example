# =============================================================
# AI Lead Generation System - Environment Variables
# Copy this file to .env and fill in your actual API keys
# =============================================================

# --- n8n Configuration ---
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_to_a_secure_password
N8N_HOST=n8n.yourdomain.com
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.yourdomain.com/

# --- Database ---
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=change_me_to_a_secure_password

# --- Apify (Scraping) ---
APIFY_API_TOKEN=your_apify_token_here

# --- OpenAI (GPT-4o for analytical extraction) ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Anthropic (Claude for email copy) ---
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Email Enrichment ---
PROSPEO_API_KEY=your_prospeo_api_key_here
HUNTER_API_KEY=your_hunter_api_key_here

# --- Outreach ---
INSTANTLY_API_KEY=your_instantly_api_key_here
INSTANTLY_CAMPAIGN_ID=your_campaign_id_here

# --- Google Sheets ---
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-sa@project.iam.gserviceaccount.com

# --- Firecrawl (Website scraping) ---
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# --- Slack Notifications (Optional) ---
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# --- Lead Generation Settings ---
# Maximum leads to scrape per search query
MAX_LEADS_PER_SEARCH=100
# Delay between API calls (seconds) for rate limiting
API_RATE_LIMIT_DELAY=1
# Batch size for enrichment processing
ENRICHMENT_BATCH_SIZE=20
# Maximum emails per inbox per day
MAX_EMAILS_PER_INBOX_PER_DAY=50
